<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.daralmathour.altaefhessan.Activities.DownloadActivity">

    <Spinner
        android:id="@+id/songersSpinnercustom"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        style="@style/SpinnerThemeDownload"
        android:entries="@array/songers"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ProgressBar
        android:id="@+id/progressBarcustom"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/songersSpinnercustom"
        android:padding="20dp"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progress="1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/6236"
        android:layout_marginLeft="20dp"
        android:textSize="30sp"
        android:layout_alignLeft="@+id/progressBar"
        android:layout_below="@+id/progressBarcustom"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="تحميل الصوتيات"
        android:textColor="#FFF"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:background="#4ebf8d"
        android:id="@+id/btnDownload"  />




</RelativeLayout>
