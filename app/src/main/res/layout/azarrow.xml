<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#024911"
    android:padding="7dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/azkardetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="تفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكارتفاصيل الاذكار"
        android:textColor="#FFF"
        android:layout_toRightOf="@+id/azkarshare"

        />

    <TextView
        android:id="@+id/azkarSawap"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/azkardetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="ثواب الاذكار"
        android:textColor="#FFF"
        android:layout_toRightOf="@+id/azkarshare"
        />

    <TextView
        android:id="@+id/azkarRepeat"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/azkarSawap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="عدد المرات"
        android:textColor="#FFF"
        android:layout_toRightOf="@+id/azkarshare"
        />

    <ImageView
        android:id="@+id/azkarshare"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/share"
        android:layout_alignParentLeft="true"
        />

      <View
          android:background="#ffffff"
          android:layout_marginTop="2dp"
          android:layout_below="@+id/azkarRepeat"
          android:layout_width = "match_parent"
          android:layout_height="2dp"/>


</RelativeLayout>